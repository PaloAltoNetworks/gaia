# Model
model:
  rest_name: token
  resource_name: tokens
  entity_name: Token
  package: barret
  description: This api issue signed token from the given certificate.
  private: true

# Attributes
attributes:
- name: certificate
  description: Certificate contains the client certificate to use to create a token.
  type: string
  exposed: true
  required: true
  creation_only: true
  format: free

- name: signingKeyID
  description: SigningKeyID holds the ID of the custom CA to use to sign the token.
  type: string
  exposed: true
  stored: true
  format: free

- name: token
  description: Token contains the generated token.
  type: string
  exposed: true
  read_only: true
  autogenerated: true
  format: free

- name: validity
  description: Validity contains the token validity duration.
  type: string
  exposed: true
  creation_only: true
  format: free
