# Model
model:
  rest_name: cloudgraphnode
  resource_name: cloudgraphnodes
  entity_name: CloudGraphNode
  package: pcn/infrastructure
  group: pcn/infrastructure
  description: "Returns a data structure representing the graph of all cloud nodes
    \nand their connections in a particular namespace."

# Attributes
attributes:
  v1:
  - name: nativeID
    description: The native ID of the node.
    type: string
    exposed: true
    autogenerated: true

  - name: nodeData
    description: Details about the node if the query type requests full details.
    type: ref
    exposed: true
    subtype: cloudnode
    autogenerated: true
    extensions:
      refMode: pointer

  - name: policies
    description: The policies that were applied to this node for each destination.
    type: refMap
    exposed: true
    subtype: cloudgraphnodeaction
    autogenerated: true
    extensions:
      refMode: pointer

  - name: routeTableIDs
    description: |-
      The list of route tables IDs that forwarding was based on for the internal path,
      if routing was
      performed.
    type: external
    exposed: true
    subtype: map[string]string
    autogenerated: true

  - name: type
    description: The type of the node as a string.
    type: string
    exposed: true
    autogenerated: true
