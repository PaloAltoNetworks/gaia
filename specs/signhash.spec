# Model
model:
  rest_name: signhash
  resource_name: signhashes
  entity_name: Signhash
  package: barret
  group: internal/x509
  description: Signs the hash string using the ecdsa algorithm.
  private: true

# Attributes
attributes:
  v1:
  - name: signingKeyID
    description: SigningKeyID holds the ID of the custom CA to use to sign the hash.
    type: string
    exposed: true

  - name: hashString
    description: hash string that needs to be signed.
    type: string
    exposed: true
    creation_only: true

  - name: signedHashString
    description: Contains the signature of the hashed string.
    type: string
    exposed: true
    read_only: true
    autogenerated: true
