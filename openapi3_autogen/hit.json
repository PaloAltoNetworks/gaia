    "title": "hit",
    "version": "1.0"
  },
  "paths": {
    "/hits": {
      "get": {
        "description": "Retrieve a matching hit.",
        "operationId": "get-all-hits",
        "parameters": [
          {
            "description": "The name of the counter.",
            "example": "counter",
            "in": "query",
            "name": "name",
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "The ID of the object associated to the counter.",
            "example": "xyz",
            "in": "query",
            "name": "targetID",
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "The identity of the object associated to the counter.",
            "example": "processingunit",
            "in": "query",
            "name": "targetIdentity",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/hit"
                  },
                  "type": "array"
                }
              }
            },
            "description": "n/a"
          }
        },
        "tags": [
          "core",
          "minwu"
        ]
      },
      "post": {
        "description": "Manage hits.",
        "operationId": "create-a-new-hit",
        "parameters": [
          {
            "description": "If set the hit will reset to 0.",
            "in": "query",
            "name": "reset",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/hit"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/hit"
                }
              }
            },
            "description": "n/a"
          }
        },
        "tags": [
          "core",
          "minwu"
        ]
      }
    }
  },
